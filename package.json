{
  "name": "vastro",
  "version": "0.0.1",
  "description": "CLI tool for simplificity",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "install": "node installer.js",
    "uninstall": "node uninstall.js"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "inquirer": "^8.2.0",
    "@octokit/rest": "^18.1.0"
  },
  "bin": {
    "vastro": "./index.js"
  },
  "build": {
    "appId": "net.abhinav.vastro-cli",
    "productName": "Vastro CLI",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis" // or any other target you prefer
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": true
    }
  },
  "author" {
    "name": "Abhinav VS"
  }
}
